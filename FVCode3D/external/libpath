#! /bin/bash

# list of packages
# the key should be:
# - INSTALL : the package will be installed by this script
# - YES : the package is already installed in the system, and its paths
# must be specified in the following variables
# - NO : the package will not be used
# BEWARE! some packages are required and cannot be set to NO!!

source config

#####################
# REQUIRED PACKAGES
#####################

#CMake
if [ -z "${cmake}" ]; then
    cmake=INSTALL
fi
if [ -z "${cmake_install_dir}" ]; then
    cmake_install_dir=${INSTALL_DIR}/external/cmake
fi
CMAKE_BIN=${cmake_install_dir}/bin/cmake

#Eigen
if [ -z "${eigen}" ]; then
    eigen=INSTALL
fi
if [ -z "${eigen_install_dir}" ]; then
    eigen_install_dir=${INSTALL_DIR}/external/eigen
fi

#BLAS
if [ -z "${blas}" ]; then
    blas=INSTALL
fi
if [ -z "${blas_install_dir}" ]; then
    blas_install_dir=${INSTALL_DIR}/external/blas
fi

#LAPACK
if [ -z "${lapack}" ]; then
    lapack=INSTALL
fi
if [ -z "${lapack_install_dir}" ]; then
    lapack_install_dir=${INSTALL_DIR}/external/lapack
fi

#SuiteSparse
if [ -z "${suitesparse}" ]; then
    suitesparse=INSTALL
fi
if [ -z "${suitesparse_install_dir}" ]; then
    suitesparse_install_dir=${INSTALL_DIR}/external/suitesparse
fi

package_array=(cmake blas lapack suitesparse eigen)

package_install=()
package_yes=()
package_no=()
