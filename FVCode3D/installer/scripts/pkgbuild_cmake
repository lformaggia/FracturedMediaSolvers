#! /bin/bash

ver="2.8.12"

download_cmake() {
    if [ -f ${PACKAGE_SRC_DIR}/cmake-${ver}.tar.gz ]; then
        cp ${PACKAGE_SRC_DIR}/cmake-${ver}.tar.gz ${src_dir}
    else
        wget -nv http://www.cmake.org/files/v2.8/cmake-${ver}.tar.gz
    fi
}

unpack_cmake() {
    tar xzf cmake-${ver}.tar.gz
}

build_cmake() {
    mkdir -p ${src_dir}/cmake-${ver}
    cd ${src_dir}/cmake-${ver}

    ./bootstrap --prefix=${install_dir} \
        --parallel=${NUM_PROC}

    make -j${NUM_PROC}
}

install_cmake() {
    cd ${src_dir}/cmake-${ver}
    make -j${NUM_PROC} install
}


